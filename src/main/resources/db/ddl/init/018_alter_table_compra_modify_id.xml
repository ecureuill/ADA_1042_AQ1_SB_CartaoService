    <changeSet id="018" author="ecureuill">
        <dropColumn  
            columnName="id"  
            tableName="compra">  
        </dropColumn>    
        <addColumn tableName="compra">
            <column
                name="id"
                type="uuid" 
            >
                <constraints primaryKey="true" nullable="false"  />
            </column>
        </addColumn> 
    </changeSet>
</databaseChangeLog>